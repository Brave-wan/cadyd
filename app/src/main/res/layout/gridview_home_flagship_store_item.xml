<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/horizontal_margin"
    android:paddingLeft="@dimen/horizontal_margin"
    android:paddingRight="@dimen/horizontal_margin"
    android:paddingTop="@dimen/horizontal_margin">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/home_menu_width_height"
        android:layout_height="@dimen/home_menu_width_height"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@mipmap/defaiut_on" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/comm_text"
            android:layout_marginLeft="@dimen/vertical_margin"
            android:layout_toRightOf="@+id/image"
            android:singleLine="true"
            android:text="商城"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/collect"
            style="@style/comm_text"
            android:layout_marginLeft="@dimen/vertical_margin"
            android:layout_marginTop="5dip"
            android:text="收藏数"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>