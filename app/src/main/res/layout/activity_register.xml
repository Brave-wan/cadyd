<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/regist_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hui"
        android:orientation="vertical"
        android:padding="@dimen/horizontal_margin">

        <TextView
            android:id="@+id/title_text"
            style="@style/comm_text"
            android:text="找回密码" />

        <EditText
            android:id="@+id/ui_register_phone"
            style="@style/text_style"
            android:layout_marginTop="@dimen/vertical_margin"
            android:background="@drawable/shape_registbinding_edtext"
            android:drawablePadding="@dimen/padding_extra_samll"
            android:hint="请输入你的电话号码"
            android:padding="12dp"
            android:phoneNumber="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_normal"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ui_register_set_code"
                style="@style/text_style"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:background="@drawable/shape_registbinding_edtext"
                android:hint="请输入验证码"
                android:padding="12dp" />

            <Button
                android:id="@+id/ui_register_get_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/horizontal_margin_small"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/horizontal_margin_small"
                android:layout_weight="0.3"
                android:background="@drawable/orange_button"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <EditText
            android:id="@+id/ui_register_password"
            style="@style/text_style"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_registbinding_edtext"
            android:hint="请输入6-12位数字或者英文字母"
            android:password="true" />

        <EditText
            android:id="@+id/ui_register_again_password"
            style="@style/text_style"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_registbinding_edtext"
            android:hint="请再次输入你设置的密码"
            android:password="true" />

        <TextView
            android:id="@+id/Agreement"
            style="@style/comm_text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="《第一点平台用户协议》"
            android:textColor="@color/Orange" />


        <Button
            android:id="@+id/ui_register_send"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_marginTop="42dp"
            android:background="@drawable/round_yellow_transparent"
            android:text="同意并注册"
            android:textColor="@color/Orange" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/Already"
                style="@style/comm_text"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="已有帐号,立即登录>"
                android:textColor="@color/Orange" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>