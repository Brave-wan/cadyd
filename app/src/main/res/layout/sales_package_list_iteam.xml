<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/horizontal_margin"
              android:paddingRight="@dimen/horizontal_margin"
              android:paddingBottom="@dimen/horizontal_margin">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:orientation="horizontal"
                    android:id="@+id/title">
        <TextView
                style="@style/comm_text"
                android:id="@+id/name"
                android:text="套餐1"
                android:layout_centerVertical="true"/>
        <TextView
                android:layout_toRightOf="@+id/name"
                style="@style/comm_text"
                android:id="@+id/price"
                android:text="套餐价格：￥5288.00"
                android:layout_centerVertical="true"
                android:textColor="@color/goods_detail_red"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:textSize="@dimen/font_tiny"/>
        <ImageView
                android:id="@+id/arrow_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_down"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/package_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/package_view_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:visibility="gone"/>
    <LinearLayout
            android:id="@+id/package_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
        <View style="@style/comm_line_horizontal"
              android:layout_marginTop="@dimen/vertical_margin"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin">
            <TextView
                    style="@style/comm_text"
                    android:id="@+id/price_bottom"
                    android:textColor="@color/goods_detail_red"
                    android:text="套餐价格：￥5288.00"
                    android:layout_alignParentLeft="true"/>
            <TextView
                    android:id="@+id/entity_price"
                    style="@style/comm_text"
                    android:text="实体店价格：￥5288.00"
                    android:layout_alignParentRight="true"
                    android:textSize="13sp"/>
        </RelativeLayout>


        <TextView style="@style/comm_text"
                  android:id="@+id/thrift"
                  android:background="@drawable/corners_sales_package_btn"
                  android:textColor="@color/goods_detail_price"
                  android:text="立省：￥400.00"
                  android:paddingLeft="@dimen/vertical_margin"
                  android:paddingRight="@dimen/vertical_margin"
                  android:layout_marginTop="@dimen/vertical_margin"/>
        <Button
                style="@style/comm_button"
                android:layout_width="match_parent"
                android:id="@+id/add_cart"
                android:layout_height="35dip"
                android:layout_marginTop="@dimen/horizontal_margin"
                android:text="加入购物车"/>
    </LinearLayout>
</LinearLayout>
