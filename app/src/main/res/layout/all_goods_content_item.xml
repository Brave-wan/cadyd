<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/vertical_margin"
                android:paddingBottom="@dimen/vertical_margin">

    <ImageView android:id="@+id/ui_tesco_item_small_image"
               android:background="@mipmap/ten_table"
               android:layout_marginTop="4dp"
               android:layout_marginLeft="4dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>


    <ImageView android:id="@+id/ui_tesco_item_image"
               android:layout_margin="6dp"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_centerHorizontal="true"
               android:scaleType="fitXY"/>

    <TextView android:id="@+id/ui_tesco_item_content"
              android:layout_below="@id/ui_tesco_item_image"
              style="@style/comm_text"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:singleLine="true"/>


    <TextView android:id="@+id/ui_tesco_item_allnumber"
              android:layout_below="@id/ui_tesco_item_content"
              style="@style/comm_text"
              android:layout_marginLeft="@dimen/vertical_margin"
              android:layout_marginRight="@dimen/vertical_margin"
              android:textSize="@dimen/font_tiny"
              android:text="1364"/>

    <ProgressBar android:id="@+id/ui_tesco_item_bar"
                 android:layout_below="@id/ui_tesco_item_allnumber"
                 android:layout_marginLeft="@dimen/vertical_margin"
                 android:layout_marginRight="@dimen/vertical_margin"
                 android:layout_width="80dp"
                 android:layout_height="5dp"
                 android:max="100"
                 android:progress="50"
                 android:progressDrawable="@drawable/progressbar"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:layout_marginTop="@dimen/horizontal_margin_small"
                 android:layout_marginBottom="@dimen/horizontal_margin_small"/>

    <TextView android:id="@+id/ui_tesco_item_surplusNumber"
              android:layout_below="@id/ui_tesco_item_bar"
              android:layout_marginLeft="@dimen/vertical_margin"
              android:layout_marginRight="@dimen/vertical_margin"
              style="@style/comm_text"
              android:textSize="@dimen/font_tiny"
              android:text="1364"/>


    <Button android:id="@+id/ui_tesco_item_addcar"
            android:layout_below="@id/ui_tesco_item_allnumber"
            android:layout_alignParentRight="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/vertical_margin"
            android:background="@mipmap/shoppingcar_image"/>

</RelativeLayout>