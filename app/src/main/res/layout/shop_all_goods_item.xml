<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:padding="@dimen/vertical_margin"
                  android:orientation="vertical">

        <RelativeLayout android:layout_width="130dip"
                        android:layout_height="130dip"
                        android:layout_gravity="center_horizontal">
            <ImageView android:id="@+id/image_view"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/red"
                       android:scaleType="fitXY"/>

            <TextView android:id="@+id/price"
                      android:layout_width="match_parent"
                      android:layout_height="20dp"
                      android:gravity="center_vertical"
                      android:textColor="@color/white"
                      android:paddingLeft="@dimen/vertical_margin"
                      android:text="￥ 1000.00"
                      android:textSize="@dimen/font_small"
                      android:layout_alignParentBottom="true"
                      android:background="@mipmap/l_r_gradual_change"/>
        </RelativeLayout>

        <TextView android:id="@+id/type"
                  style="@style/comm_text"
                  android:background="@drawable/round_gray_transparent"
                  android:textSize="@dimen/font_tiny"
                  android:layout_marginTop="@dimen/vertical_margin"
                  android:padding="@dimen/horizontal_margin_small"
                  android:textColor="@color/gray"
                  android:singleLine="false"
                  android:lines="1"
                  android:ellipsize="end"
                  android:text="化妆品"/>


        <TextView
                android:id="@+id/name"
                style="@style/comm_text"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/vertical_margin"
                android:textColor="@color/black"
                android:singleLine="false"
                android:lines="2"
                android:ellipsize="end"
                android:text="雷柏（Rapoo）V500S 背光机械游戏键盘 机械黑轴 黑色版"/>
    </LinearLayout>
</LinearLayout>
