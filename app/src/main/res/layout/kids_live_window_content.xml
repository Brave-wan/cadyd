<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/vertical_margin">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/horizontal_margin_small"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/horizontal_margin_small"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/horizontal_margin_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/comm_text_black"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="深加工i哦去逛街哦清洁工i期间噶接口哈克拉过来卡垃圾坑噶快乐就是阿姐鼓刻录机啊" />

            <TextView
                android:id="@+id/money"
                style="@style/comm_text"
                android:layout_below="@id/title"
                android:layout_marginTop="@dimen/horizontal_margin_small"
                android:text="2000"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/buy_number"
                style="@style/comm_text"
                android:layout_alignParentBottom="true"
                android:text="0人购买" />

            <Button
                android:id="@+id/add_car"
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/horizontal_margin_small"
                android:paddingRight="@dimen/horizontal_margin_small"
                android:text="加入购物车"
                android:textSize="@dimen/font_small" />
        </RelativeLayout>

    </LinearLayout>

    <View style="@style/comm_line_horizontal" />
</LinearLayout>