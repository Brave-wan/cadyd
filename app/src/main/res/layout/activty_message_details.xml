<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <WebView
        android:id="@+id/message_details_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/message_details_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/message_details_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="生活不需要无谓的执著，一切随缘。时间，会沉淀最真的情感；风雨，会考验最暖的陪伴。"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_title" />

            <TextView
                android:id="@+id/message_details_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="有效期：2016-10-12 23:20:00至2016-10-15 23:20:00"
                android:textColor="@color/text_primary_gray"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_details_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@drawable/corners_btn_orange_round"
                android:clickable="true"
                android:gravity="center"
                android:onClick="AcceptClick"
                android:text="接受"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:background="@drawable/corners_btn_black_alphe"
                android:clickable="true"
                android:gravity="center"
                android:onClick="NotAcceptClick"
                android:text="不接受"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>