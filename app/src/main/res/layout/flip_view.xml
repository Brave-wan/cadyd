<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="@dimen/vertical_margin"
                  android:paddingRight="@dimen/vertical_margin">
        <TextView android:id="@+id/typeOne"
                  style="@style/comm_text"
                  android:text="最新"
                  android:background="@drawable/number_info_type"
                  android:padding="2dip"
                  android:textColor="@color/red"
                  android:textSize="10sp"/>
        <TextView style="@style/comm_text"
                  android:id="@+id/nameOne"
                  android:layout_marginLeft="@dimen/vertical_margin"
                  android:text="最新多萨法撒旦发射点发射得分阿萨德发动法撒旦发生大幅阿萨德法撒旦发射范德萨范德萨富士达法撒旦法撒旦法撒旦"
                  android:singleLine="false"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="@dimen/vertical_margin"
                  android:paddingRight="@dimen/vertical_margin"
                  android:layout_marginTop="5dip">
        <TextView style="@style/comm_text"
                  android:id="@+id/typeTwo"
                  android:text="最新"
                  android:background="@drawable/number_info_type"
                  android:textColor="@color/red"
                  android:padding="2dip"
                  android:textSize="10sp"/>
        <TextView style="@style/comm_text"
                  android:id="@+id/nameTwo"
                  android:layout_marginLeft="@dimen/vertical_margin"
                  android:singleLine="false"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
