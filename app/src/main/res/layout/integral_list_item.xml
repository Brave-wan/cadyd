<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="@dimen/padding_extra_samll">

        <TextView style="@style/comm_text"
                  android:id="@+id/integral_name"
                  android:textSize="@dimen/font_submit"
                  android:layout_marginLeft="@dimen/vertical_margin"
                  android:layout_gravity="center"
                  android:text="积分"/>

        <View android:id="@+id/v_line"
              style="@style/comm_line_vertical"
              android:layout_toRightOf="@id/integral_name"
              android:layout_marginLeft="@dimen/vertical_margin"/>

        <LinearLayout android:layout_toRightOf="@id/v_line"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="@dimen/vertical_margin"
                      android:orientation="vertical">

            <TextView style="@style/comm_text"
                      android:id="@+id/integral_time"
                      android:gravity="center"
                      android:text="000.00.00 00.00"/>

            <TextView style="@style/comm_text"
                      android:id="@+id/integral_content"
                      android:layout_marginTop="@dimen/vertical_margin"
                      android:maxWidth="210dp"
                      android:maxLines="2"
                      android:text="00000000000000"/>

        </LinearLayout>


        <TextView style="@style/comm_text"
                  android:layout_gravity="center"
                  android:text=""/>


        <TextView style="@style/comm_text"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:id="@+id/integral_number"
                  android:layout_width="match_parent"
                  android:layout_marginRight="@dimen/vertical_margin"
                  android:layout_gravity="center"
                  android:gravity="right"
                  android:layout_marginLeft="@dimen/vertical_margin"
                  android:text="0.00"/>

        <View style="@style/comm_line_horizontal"
              android:layout_alignParentBottom="true"/>
    </LinearLayout>

    <View style="@style/comm_line_horizontal"/>

</LinearLayout>
