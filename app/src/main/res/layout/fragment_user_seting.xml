<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_margin"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/ui_user_information_phone"
            style="@style/item_relativeLayout">

            <TextView
                style="@style/comm_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:text="手机号码" />

            <EditText
                android:id="@+id/ui_user_information_phone_text"
                style="@style/user_title_right_text"
                android:background="@null"
                android:drawableRight="@mipmap/arrow_right"
                android:enabled="false"
                android:text="" />
        </RelativeLayout>

        <View style="@style/comm_line_horizontal" />

        <RelativeLayout
            android:id="@+id/ui_user_information_change_password"
            style="@style/item_relativeLayout">

            <TextView
                style="@style/comm_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:text="修改密码" />

            <TextView
                style="@style/user_title_right_text"
                android:drawableRight="@mipmap/arrow_right"
                android:text="" />
        </RelativeLayout>

        <View style="@style/comm_line_horizontal" />

        <RelativeLayout
            android:id="@+id/ui_user_my_account"
            style="@style/item_relativeLayout"
            android:layout_marginTop="@dimen/vertical_margin">

            <TextView
                style="@style/comm_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:text="我的帐号" />

            <TextView
                style="@style/user_title_right_text"
                android:drawableRight="@mipmap/arrow_right"
                android:text="" />
        </RelativeLayout>

        <View style="@style/comm_line_horizontal" />

        <RelativeLayout
            android:id="@+id/ui_user_information_change_update"
            style="@style/item_relativeLayout">

            <TextView
                style="@style/comm_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:text="检测更新" />

            <TextView
                style="@style/user_title_right_text"
                android:drawableRight="@mipmap/arrow_right"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_Suggestions"
            style="@style/item_relativeLayout"
            android:layout_marginTop="@dimen/vertical_margin">

            <TextView
                style="@style/comm_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:text="投诉建议" />

            <TextView
                style="@style/user_title_right_text"
                android:drawableRight="@mipmap/arrow_right"
                android:text="" />
        </RelativeLayout>

        <View style="@style/comm_line_horizontal" />

        <RelativeLayout
            android:id="@+id/user_clear_cache"
            style="@style/item_relativeLayout"
            android:visibility="gone">

            <TextView
                style="@style/comm_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:text="清除缓存"
                android:textColor="@color/Orange" />

            <TextView
                android:id="@+id/user_clear_cache_number"
                style="@style/user_title_right_text"
                android:drawableRight="@mipmap/arrow_right"
                android:text="12.3M"
                android:textColor="@color/Orange" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/about_us"
            style="@style/item_relativeLayout"
            android:layout_marginTop="@dimen/vertical_margin">

            <TextView
                style="@style/comm_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:text="关于我们" />

            <TextView
                style="@style/user_title_right_text"
                android:drawableRight="@mipmap/arrow_right"
                android:text="" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/ui_user_information_sign_out"
        style="@style/button_style"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:text="退出当前帐号" />

</RelativeLayout>
