<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <ImageView android:id="@+id/ui_tesco_item_image"
                   android:layout_margin="@dimen/vertical_margin"
                   android:scaleType="fitXY"
                   android:layout_width="90dp"
                   android:layout_height="100dp"/>

        <LinearLayout android:orientation="vertical"
                      android:layout_marginTop="@dimen/vertical_margin"
                      android:id="@+id/record_parent_layout"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <TextView android:id="@+id/ui_tesco_item_content"
                      style="@style/comm_text"
                      android:textSize="13sp"
                      android:paddingRight="12dp"
                      android:paddingLeft="12dp"
                      android:singleLine="true"
                      android:text="发放哈佛附近埃及和大家撒娇发flak会计分录卡机弗拉基发酒疯垃圾罚款垃圾垃圾垃圾"/>

            <ProgressBar android:id="@+id/ui_tesco_item_bar"
                         android:layout_marginTop="@dimen/vertical_margin"
                         android:layout_width="match_parent"
                         android:layout_height="5dp"
                         android:max="100"
                         android:progress="50"
                         android:layout_marginLeft="@dimen/vertical_margin"
                         android:layout_marginRight="@dimen/vertical_margin"
                         android:progressDrawable="@drawable/progressbar"
                         style="?android:attr/progressBarStyleHorizontal"/>

            <RelativeLayout android:id="@+id/num_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="@dimen/vertical_margin">
                <TextView android:id="@+id/ui_tesco_item_number"
                          style="@style/comm_text"
                          android:gravity="left"
                          android:textColor="@color/red"
                          android:text="0"/>
                <TextView android:id="@+id/ui_tesco_item_allnumber"
                          style="@style/comm_text"
                          android:layout_centerInParent="true"
                          android:text="0"/>

                <TextView android:id="@+id/ui_tesco_item_surplusNumber"
                          style="@style/comm_text"
                          android:textColor="@color/blue"
                          android:layout_alignParentRight="true"
                          android:text="0"/>
            </RelativeLayout>

            <RelativeLayout android:id="@+id/num_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/vertical_margin"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp">
                <TextView
                        style="@style/comm_text"
                        android:text="已参与"/>
                <TextView style="@style/comm_text"
                          android:layout_centerInParent="true"
                          android:text="总需人次"/>

                <TextView style="@style/comm_text"
                          android:layout_alignParentRight="true"
                          android:text="剩余"/>
            </RelativeLayout>

            <TextView style="@style/comm_text"
                      android:id="@+id/name"
                      android:layout_marginTop="@dimen/vertical_margin"
                      android:layout_marginLeft="12dp"
                      android:layout_marginRight="12dp"
                      android:text="获奖者:"/>

            <TextView style="@style/comm_text"
                      android:id="@+id/luck_number"
                      android:layout_marginTop="@dimen/vertical_margin"
                      android:layout_marginLeft="12dp"
                      android:layout_marginRight="12dp"
                      android:text="获奖乐购码:"/>

            <Button style="@style/button_style"
                    android:layout_marginLeft="@dimen/vertical_margin"
                    android:id="@+id/get_luck_number"
                    android:layout_marginTop="@dimen/vertical_margin"
                    android:textSize="@dimen/font_small"
                    android:layout_width="80dp"
                    android:layout_height="22dp"
                    android:text="我的乐购码"/>

        </LinearLayout>

        <RelativeLayout android:orientation="horizontal"
                        android:id="@+id/get_parent_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

            <Button style="@style/button_style"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/vertical_margin"
                    android:textSize="@dimen/font_small"
                    android:id="@+id/the_sun"
                    android:text="晒单"/>

            <LinearLayout android:orientation="vertical"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_toLeftOf="@id/the_sun">

                <TextView style="@style/comm_text"
                          android:id="@+id/get_name"
                          android:layout_marginTop="@dimen/vertical_margin"
                          android:layout_marginLeft="@dimen/horizontal_margin_small"
                          android:layout_marginRight="12dp"
                          android:text="获奖者:"/>

                <TextView style="@style/comm_text"
                          android:id="@+id/get_number"
                          android:layout_marginTop="@dimen/vertical_margin"
                          android:layout_marginLeft="@dimen/horizontal_margin_small"
                          android:layout_marginRight="12dp"
                          android:text="本期参与人次:"/>

                <TextView style="@style/comm_text"
                          android:id="@+id/get_all_number"
                          android:layout_marginTop="@dimen/vertical_margin"
                          android:layout_marginLeft="@dimen/horizontal_margin_small"
                          android:layout_marginRight="12dp"
                          android:text="总需人次:"/>

                <TextView style="@style/comm_text"
                          android:id="@+id/get_time"
                          android:layout_marginTop="@dimen/vertical_margin"
                          android:layout_marginLeft="@dimen/horizontal_margin_small"
                          android:layout_marginRight="12dp"
                          android:singleLine="true"
                          android:text="揭晓时间:"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <View style="@style/comm_line_horizontal"
          android:layout_marginTop="@dimen/vertical_margin"/>
</LinearLayout>
