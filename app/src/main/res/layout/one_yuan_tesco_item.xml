<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingTop="@dimen/vertical_margin"
                android:paddingBottom="@dimen/vertical_margin">

    <ImageView android:id="@+id/ui_tesco_item_small_image"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="4dp"
               android:layout_marginTop="4dp"
               android:background="@mipmap/ten_table"/>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <ImageView android:id="@+id/ui_tesco_item_image"
                   android:layout_margin="12dp"
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:layout_gravity="center_horizontal"
                   android:scaleType="fitXY"/>

        <TextView android:id="@+id/ui_tesco_item_content"
                  style="@style/comm_text"
                  android:textSize="13sp"
                  android:paddingRight="12dp"
                  android:paddingLeft="12dp"
                  android:singleLine="true"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="6dp">

            <TextView android:id="@+id/ui_tesco_item_allnumber"
                      style="@style/comm_text"
                      android:text="1364"/>

            <ProgressBar android:id="@+id/ui_tesco_item_bar"
                         android:layout_below="@id/ui_tesco_item_allnumber"
                         android:layout_width="110dp"
                         android:layout_height="5dp"
                         android:progressDrawable="@drawable/progressbar"
                         style="?android:attr/progressBarStyleHorizontal"
                         android:layout_marginTop="@dimen/horizontal_margin_small"
                         android:layout_marginBottom="@dimen/horizontal_margin_small"/>
            <TextView android:id="@+id/ui_tesco_item_surplusNumber"
                      android:layout_below="@id/ui_tesco_item_bar"
                      style="@style/comm_text"
                      android:text="1364"/>

            <Button android:id="@+id/ui_tesco_item_addcar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/shoppingcar_image"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>