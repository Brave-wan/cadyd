<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/window_height"
            android:layout_alignParentBottom="true"
            android:background="@color/white">
        <TextView
                android:id="@+id/title"
                style="@style/comm_text_black"
                android:text="服务说明"
                android:padding="@dimen/horizontal_margin"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
        <org.wcy.android.widget.MyListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:dividerHeight="@dimen/line_height"
                android:listSelector="@color/transparent"
                android:divider="@color/light_gray"
                android:layout_marginTop="@dimen/vertical_margin"
                android:layout_above="@+id/determine"
                android:layout_below="@+id/title"/>
        <Button android:layout_width="match_parent"
                android:id="@+id/determine"
                android:layout_height="@dimen/title_heigh"
                android:background="@drawable/purchase_button_selector"
                style="@style/comm_text"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="完成"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
