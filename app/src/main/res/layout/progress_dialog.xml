<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <com.pnikosis.materialishprogress.ProgressWheel
            android:layout_width="@dimen/progress_normal"
            android:layout_height="@dimen/progress_normal"
            wheel:matProg_barColor="@color/title_bg"
            wheel:matProg_progressIndeterminate="true" />

        <TextView
            android:id="@+id/progressBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_extra_samll"
            android:singleLine="true"
            android:text="正在加载..."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_primary_gray"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

</RelativeLayout>