<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="快速注册"
        android:textColor="#666666" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_registbinding_edtext"
        android:hint="请输入手机号码"
        android:paddingLeft="10dp"
        android:textColorHint="#c8c7cd"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/verification_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/shape_registbinding_edtext"
            android:hint="验证码"
            android:paddingLeft="10dp"
            android:textColorHint="#c8c7cd"
            android:textSize="14sp" />

        <Button
            android:id="@+id/get_verification_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_loginbinding_btn"
            android:text="获取短信验证码"
            android:textColor="@color/white" />
    </LinearLayout>

    <EditText
        android:id="@+id/again_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_registbinding_edtext"
        android:hint="请再次输入登录密码"
        android:paddingLeft="10dp"
        android:textColorHint="#c8c7cd"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/confirm_user_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:button="@null"
        android:drawableLeft="@drawable/shopping_cart_checked_selector"
        android:drawablePadding="5dp"
        android:text="同意《“第一点”用户注册协议》"
        android:textColor="#999999" />


    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_registbinding_btn"
        android:gravity="center"
        android:text="注册"

        android:textColor="#fc7f47" />
</LinearLayout>