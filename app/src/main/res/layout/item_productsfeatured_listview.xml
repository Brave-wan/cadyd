<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="5dp">

    <ImageView
        android:id="@+id/item_prudect_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/item_prudect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_prudect_image"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLength="11"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/item_prudect_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_prudect_name"
        android:layout_marginTop="5dp"
        android:textColor="@color/A106"/>


</RelativeLayout>