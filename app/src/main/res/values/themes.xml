<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.Light.MenuTextStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/title_bg</item>
        <item name="colorPrimary">@color/title_bg</item>
        <item name="colorPrimaryDark">@color/actionbar_bg</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextAppearance">@style/AppTheme.Light.MenuTextStyle</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>