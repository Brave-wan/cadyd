<resources>
    <!-- 横线-->
    <style name="comm_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/line_bg</item>
    </style>

    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">8.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/po_seekbar</item>
        <item name="android:minHeight">8.0dip</item>
        <item name="android:thumb">@mipmap/live_progressbar_btn</item>
        <item name="android:thumbOffset">10.0dip</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" type="text/css">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="comm_line_vertical">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_bg</item>
    </style>

    <style name="comm_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary_gray</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/horizontal_margin_small</item>
    </style>

    <style name="comm_text_black" parent="comm_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="main_radio_btn">
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/horizontal_margin_small</item>
        <item name="android:paddingTop">@dimen/horizontal_margin_small</item>
        <item name="android:paddingBottom">@dimen/horizontal_margin_small</item>
        <item name="android:textColor">@color/radio_nor</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="goods_detail_radio_btn">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/goods_detail_radio_selector</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/goods_detail_radio_text_selector</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 一元购 -->
    <style name="one__radio_btn">
        <item name="android:button">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingTop">@dimen/horizontal_margin_small</item>
        <item name="android:paddingBottom">@dimen/horizontal_margin_small</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/main_radio_text_selector</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/horizontal_margin_small</item>
    </style>

    <style name="AppTheme.Light.DialogAimationStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="AppTheme.Light.ShareDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Light.DialogAimationStyle</item>
    </style>

    <style name="AppTheme.Light.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.Light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Light.MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- 文本框-->
    <style name="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/progress_normal</item>
        <item name="android:background">@drawable/text_boolen_round_yellow_transparent</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">@dimen/vertical_margin</item>
        <item name="android:textSize">@dimen/font_small</item>

    </style>

    <!-- 按钮-->
    <style name="button_style">
        <item name="android:layout_height">@dimen/progress_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@drawable/button_text_change</item>
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <!-- 按钮-->
    <style name="button_wrap_read_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@drawable/button_text_change</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin</item>
        <item name="android:background">@drawable/round_red_untransparent</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- 个人信息 -->
    <style name="item_relativeLayout">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/padding_extra_samll</item>
        <item name="android:layout_height">@dimen/progress_normal</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="relativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/vertical_margin</item>
    </style>

    <style name="linearlayout_horizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_heigh</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/vertical_margin</item>
    </style>

    <style name="linearlayout_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/orthogonal_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/horizontal_margin</item>
    </style>

    //左

    <style name="user_title_left_text" parent="comm_text">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">@dimen/padding_extra_samll</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/vertical_margin</item>
    </style>
    //右

    <style name="user_title_right_text" parent="comm_text">
        <item name="android:drawablePadding">@dimen/horizontal_margin_small</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawableRight">@mipmap/arrow_right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/vertical_margin</item>
    </style>
    //上

    <style name="user_title_top_text" parent="comm_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/horizontal_margin_small</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginRight">@dimen/vertical_margin</item>
    </style>

    <style name="button_more">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:text">更多</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/more_text</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin</item>
        <item name="android:background">@drawable/corners_more</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/vertical_margin</item>
        <item name="android:paddingRight">@dimen/vertical_margin</item>
    </style>

    <style name="comm_button" parent="comm_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/vertical_margin</item>
        <item name="android:paddingRight">@dimen/vertical_margin</item>
        <item name="android:paddingTop">@dimen/horizontal_margin_small</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingBottom">@dimen/horizontal_margin_small</item>
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">35dip</item>
    </style>

    <style name="popWindow_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_up_in</item>
        <item name="android:windowExitAnimation">@anim/pop_down_out</item>
    </style>

    //checkBox

    <style name="gradCheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/color_change_checked</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">@dimen/horizontal_margin_small</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:button">@null</item>
    </style>


    <style name="shopping_cart_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableRight">@drawable/shopping_cart_checked_selector</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
        <item name="android:drawablePadding">3dip</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/text_primary_gray</item>
    </style>

    <style name="Animations_BottomPush">
        <item name="android:windowEnterAnimation">@anim/pw_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/pw_push_bottom_out</item>
    </style>

    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="radio_button">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ridaus_left_radio_button" parent="radio_button">
        <item name="android:textColor">@drawable/text_yelloy_and_white</item>
        <item name="android:background">@drawable/l_background_white_and_yelloy</item>
    </style>

    <style name="ridaus_right_radio_button" parent="radio_button">
        <item name="android:textColor">@drawable/text_yelloy_and_white</item>
        <item name="android:background">@drawable/r_background_white_and_yelloy</item>
    </style>

    <style name="ridaus_center_radio_button" parent="radio_button">
        <item name="android:layout_marginTop">@dimen/line_height</item>
        <item name="android:layout_marginBottom">@dimen/line_height</item>
        <item name="android:textColor">@drawable/text_yelloy_and_white</item>
        <item name="android:background">@drawable/background_white_and_yelloy</item>
    </style>

    <style name="warning_buton">
        <item name="android:background">@drawable/warning_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="normal_buton">
        <item name="android:background">@drawable/normal_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/back_right_out</item>
    </style>

    <style name="comm_operate_btn" parent="comm_text">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/corners_operate_btn_selector</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/vertical_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
    </style>

    <style name="league_prefer_btn">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_width">80dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">立即领取</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/horizontal_margin_small</item>
        <item name="android:paddingBottom">@dimen/horizontal_margin_small</item>
        <item name="android:layout_marginTop">@dimen/horizontal_margin_small</item>
    </style>

    <style name="favorable_btn">
        <item name="android:background">@drawable/corners_favorable_btn</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/goods_detail_red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="custom_toggle_btn" parent="@android:style/Widget.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_bg</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

    <!--zjh-->
    <style name="popup_window_bottombar">
        <item name="android:windowEnterAnimation">@anim/menu_pop_up_in</item>
        <item name="android:windowExitAnimation">@anim/menu_pop_down_out</item>
    </style>
</resources>
